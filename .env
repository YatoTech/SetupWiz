# ===== App Configuration =====
APP_NAME=setupwiz
NODE_ENV=development
PORT=3000
APP_DOMAIN=http://localhost

# ===== Logging =====
LOG_LEVEL=info

# ===== PM2 =====
ENABLE_PM2=true
PM2_APP_NAME=setupwiz-app

# ===== MongoDB Configuration =====
MONGO_HOST=127.0.0.1
MONGO_PORT=27017

# MongoDB Admin (Root) Credentials
MONGO_ROOT_USER=root
MONGO_ROOT_PASS=root

# MongoDB Application DB & User
MONGO_APP_DB=setupwiz
MONGO_APP_USER=user
MONGO_APP_PASS=user

# MongoDB Connection URI (for app use)
MONGO_URI=mongodb://user:user@127.0.0.1:27017/setupwiz?authSource=admin

# ===== SSL Configuration (optional, if HTTPS is used) =====
SSL_KEY_PATH=certs/key.pem
SSL_CERT_PATH=certs/cert.pem

# ===== WebApp =====
WEBAPP_BUILD_PATH=webapp/build

# ===== Security =====
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=1d
SESSION_SECRET=your_session_secret_key
CORS_ORIGIN=http://localhost:3000

# ===== Log Directory =====
LOG_DIR=logs
